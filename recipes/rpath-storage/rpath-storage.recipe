class rPathStorage(PackageRecipe):
    name = 'rpath-storage'
    version = '0.1'

    buildRequires = [
        'make:runtime',
        'python:devel',
        'util-linux:runtime', # Needed by arch (in Make.defs)
    ]

    def setup(r):
        r.addMercurialSnapshot()
        r.MakeInstall()
